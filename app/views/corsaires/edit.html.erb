<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @corsaire  do |f| %>
<%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :age %>
      <%= f.text_field :age %>

      <%= f.label :bio %>
      <%= f.text_field :bio %>

      <%= f.label :slack_handle %>
      <%= f.text_field :slack_handle %>

      <%= f.label :github_handle %>
      <%= f.text_field :github_handle %>


      <%= f.radio_button(:likeness, "kebab") %>
      <%= f.label(:likeness_kebab, "I like kebab") %>
      <%= f.radio_button(:likeness, "hummus") %>
      <%= f.label(:likeness_hummus, "I like hummus") %>

      <%= f.submit "Update my profile", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
